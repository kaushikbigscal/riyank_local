<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_hr_payroll" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hr.payroll</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="45"/>
        <field name="inherit_id" ref="hr_attendance.res_config_settings_view_form"/>  <!-- âœ… FIXED -->
        <field name="arch" type="xml">
            <xpath expr="//app[@name='hr_attendance']" position="inside">
                <block title="Attendance Counter Setting" name="attendance_counter_setting_container">
                    <setting string="Max Late Check-ins" company_dependent="1">
                        <field name="max_late_check_ins"/>
                    </setting>
                    <setting string="Max Early Check-outs" company_dependent="1">
                        <field name="max_early_check_outs"/>
                    </setting>
                    <setting string="Minute Allowed" company_dependent="1">
                        <field name="minute_allowed"/>
                    </setting>
                    <setting string="Leave Type" company_dependent="1">
                        <field name="leave_type_id"/>
                    </setting>
                    <setting string="Notification Late Day In" company_dependent="1"
                             help="Days after which notification will be sent for late check-ins.">
                        <field name="notification_late_day_in"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>

 
