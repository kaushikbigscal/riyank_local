<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_update_extended_warranty_status" model="ir.cron">
            <field name="name">Cron Update Extended Warranty Status</field>
            <field name="model_id" ref="industry_fsm.model_customer_product_mapping"/>
            <field name="state">code</field>
            <field name="code">model._cron_extended_warranty_status()</field>
            <field name="active">True</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall"
                   eval="(DateTime.now().replace(hour=18, minute=30, second=0, microsecond=0)).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>
    </data>
</odoo>
