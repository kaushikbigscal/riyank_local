<odoo>
    <record id="view_product_template_form_inherit_extended_warranty" model="ir.ui.view">
        <field name="name">product.template.form.inherit.extended.warranty</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">

            <!-- Insert inside Sales tab -->
            <xpath expr="//page[@name='sales']" position="inside">
                <group>
                    <field name="is_extended_warranty"/>
                </group>
            </xpath>

        </field>
    </record>
</odoo>
