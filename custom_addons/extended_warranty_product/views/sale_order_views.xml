<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Extended Warranty Wizard Form View -->
        <record id="view_extended_warranty_wizard_form" model="ir.ui.view">
            <field name="name">extended.warranty.wizard.form</field>
            <field name="model">extended.warranty.wizard</field>
            <field name="arch" type="xml">
                <form string="Extended Warranty">
                    <sheet>
                        <!--                        <group>-->
                        <!--                            <group>-->
                        <!--                                <field name="order_id" readonly="1"/>-->
                        <!--                            </group>-->
                        <!--                        </group>-->

                        <field name="line_ids" nolabel="1">
                            <tree editable="bottom" create="false" delete="false">
                                <field name="product_id"/>
                                <field name="warranty_product_id" options="{'no_create': True, 'no_edit': True}"/>
                                <field name="warranty_start_date" readonly="1"/>
                                <field name="warranty_end_date" readonly="1"/>
                                <field name="extended_start_date"/>
                                <field name="extended_months"/>
                                <field name="extended_end_date"/>
                                <field name="rate"/>
                            </tree>
                        </field>
                    </sheet>

                    <footer>
                        <button name="action_confirm_warranty"
                                string="Confirm"
                                type="object"
                                class="btn-primary"/>
                        <button string="Cancel"
                                class="btn-secondary"
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="view_order_form_inherit_warranty" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.warranty</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <!-- Add the button next to Discount at the bottom -->
                <xpath expr="//button[@name='action_open_discount_wizard']" position="before">
                    <button name="action_open_warranty_wizard"
                            type="object"
                            string="Extended Warranty"
                            class="btn-secondary"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>