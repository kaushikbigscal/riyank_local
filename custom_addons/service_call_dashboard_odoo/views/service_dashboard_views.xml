    <record id="view_task_tree_service_call_timer" model="ir.ui.view">
        <field name="name">project.task.tree.service.call.timer</field>
        <field name="model">project.task</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="project_id"/>
                <field name="partner_id"/>
                <field name="user_ids"/>
                <field name="date_time" string="Timer Start date/Time"/>
                <field name="company_id"/>
                <field name="effective_hours"/>
                <field name="progress"/>
                <field name="activity_ids"/>
                <field name="tag_ids"/>
                <field name="stage_id"/>
            </tree>
        </field>
    </record>



