<odoo>
    <data>
        <record id="ir_cron_create_amc_service_calls" model="ir.cron">
            <field name="name">Create AMC Service Calls</field>
            <field name="model_id" ref="model_amc_visit_scheduler"/>
            <field name="state">code</field>
            <field name="code">model.create_service_calls_for_today()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall">False</field>
            <field name="active">True</field>
            <field name="nextcall" eval="(DateTime.now().replace(hour=18, minute=31, second=0, microsecond=0)).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>

        <record id="cron_update_expired_contracts" model="ir.cron">
            <field name="name">Auto Expired Contracts</field>
            <field name="model_id" ref="model_amc_contract"/>
            <field name="state">code</field>
            <field name="code">model._cron_update_expired_contracts()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
            <field name="nextcall"
                   eval="(DateTime.now().replace(hour=18, minute=31, second=0, microsecond=0)).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>

    </data>
</odoo>
