<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <template id="report_field_service_document">
        <t t-call="web.external_layout">
            <div class="oe_structure" style="margin-bottom: -50px"></div>
            <div class="page">
                <main>
                    <t t-foreach="docs" t-as="doc">
                        <div class="row">
                            <div t-att-class="'col-6' if report_type == 'pdf' else 'col-md-6 col-12'">
                                <div class="mb-3" t-foreach="doc.user_ids" t-as="user">
                                    <div>
                                        <strong>Worker:</strong>
                                    </div>
                                    <div t-out="user" t-options='{
                                        "widget": "contact",
                                        "fields": ["name", "address", "phone", "email"]}'
                                    >Marc Demo
                                    </div>
                                </div>
                            </div>
                            <div t-attf-class="{{ 'col-6' if report_type == 'pdf' else 'col-md-6 col-12' }} mb-3"
                                 t-if="doc.partner_id">
                                <div>
                                    <strong>Customer:</strong>
                                </div>
                                <div t-out="doc.partner_id" t-options='{
                                    "widget": "contact",
                                    "fields": ["name", "address", "phone", "email"]}'
                                >Jane smith
                                </div>
                            </div>
                        </div>

                        <!-- Ticket Number -->
                        <div class="row mb-3" t-if="doc.sequence_fsm">
                            <div class="col-12">
                                <h4>
                                    <strong>Ticket Number:</strong>
                                    <span t-field="doc.sequence_fsm" style="font-weight: normal;"/>
                                </h4>
                            </div>
                        </div>
                        <!-- Report Title -->
                        <h4>
                            <strong>Title:</strong>
                            <span t-field="doc.name" style="font-weight: normal;"/>
                        </h4>
                        <!-- Time & Material Section -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <h4>Calls Details</h4>
                                <table class="table table-bordered table-sm" style="table-layout: fixed;">
                                    <tbody>
                                        <!-- First Row -->
                                        <tr style="height: 40px; min-height: 40px;">
                                            <td style="width: 25%; background-color: #f8f9fa; font-weight: bold; vertical-align: middle;">
                                                Product
                                            </td>
                                            <td style="width: 25%; vertical-align: middle;">
                                                <span t-if="doc.customer_product_id and doc.customer_product_id.product_id"
                                                      t-field="doc.customer_product_id.product_id.name"/>
                                                <span t-if="not (doc.customer_product_id and doc.customer_product_id.product_id)"
                                                      style="color: transparent;">-
                                                </span>
                                            </td>
                                            <td style="width: 25%; background-color: #f8f9fa; font-weight: bold; vertical-align: middle;">
                                                Serial Numbers
                                            </td>
                                            <td style="width: 25%; vertical-align: middle;">
                                                <span t-if="doc.serial_number" t-field="doc.serial_number"/>
                                                <span t-if="not doc.serial_number" style="color: transparent;">-</span>
                                            </td>
                                        </tr>

                                        <!-- Second Row -->
                                        <tr style="height: 40px; min-height: 40px;">
                                            <td style="background-color: #f8f9fa; font-weight: bold; vertical-align: middle;">
                                                Call Type
                                            </td>
                                            <td style="vertical-align: middle;">
                                                <span t-if="doc.call_type" t-field="doc.call_type"/>
                                                <span t-if="not doc.call_type" style="color: transparent;">-</span>
                                            </td>
                                            <td style="background-color: #f8f9fa; font-weight: bold; vertical-align: middle;">
                                                Service Type
                                            </td>
                                            <td style="vertical-align: middle;">
                                                <span t-if="doc.service_types" t-field="doc.service_types"/>
                                                <span t-if="not doc.service_types" style="color: transparent;">-</span>
                                            </td>
                                        </tr>

                                        <!-- Third Row -->
                                        <tr style="height: 40px; min-height: 40px;">
                                            <td style="background-color: #f8f9fa; font-weight: bold; vertical-align: middle;">
                                                Actual Problem
                                            </td>
                                            <td style="vertical-align: middle;">
                                                <span t-if="doc.problem_description" t-field="doc.problem_description"/>
                                                <span t-if="not doc.problem_description" style="color: transparent;">-
                                                </span>
                                            </td>
                                            <td style="background-color: #f8f9fa; font-weight: bold; vertical-align: middle;">
                                                Problem Solution
                                            </td>
                                            <td style="vertical-align: middle;">
                                                <span t-if="doc.fix_description" t-field="doc.fix_description"/>
                                                <span t-if="not doc.fix_description" style="color: transparent;">-
                                                </span>
                                            </td>
                                        </tr>

                                        <!-- Fourth Row -->
                                        <tr style="height: 40px; min-height: 40px;">
                                            <td style="background-color: #f8f9fa; font-weight: bold; vertical-align: middle;">
                                                Stage
                                            </td>
                                            <td style="vertical-align: middle;">
                                                <span t-if="doc.stage_id" t-field="doc.stage_id.name"/>
                                                <span t-if="not doc.stage_id" style="color: transparent;">-</span>
                                            </td>
                                            <td style="background-color: #f8f9fa; font-weight: bold; vertical-align: middle;">
                                                <t t-if="doc.stage_id and doc.stage_id.name == 'Pending'">Pending
                                                    Reason
                                                </t>
                                                <t t-elif="doc.stage_id and doc.stage_id.name == 'Done'">Pending
                                                    Reason
                                                </t>
                                            </td>
                                            <td style="vertical-align: middle;">
                                                <t t-if="doc.stage_id and doc.stage_id.name == 'Pending'">
                                                    <span t-if="doc.pending_reason" t-field="doc.pending_reason"/>
                                                    <span t-if="not doc.pending_reason" style="color: transparent;">-
                                                    </span>
                                                </t>
                                                <t t-elif="doc.stage_id and doc.stage_id.name == 'Done'">
                                                    <span style="color: transparent;">-</span>
                                                </t>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="mb-4"></div>

                        <div name="worksheet_task_timesheet">
                            <t t-set='is_uom_day' t-value='docs.timesheet_ids._is_timesheet_encode_uom_day()'/>
                            <t t-if="docs.allow_timesheets and docs.timesheet_ids">
                                <h4>Timesheets</h4>
                                <div t-att-class="'table-responsive-sm' if report_type != 'pdf' else ''">
                                    <table class="table table-sm o_main_table">
                                        <thead>
                                            <tr>
                                                <th class="text-start">Date</th>
                                                <th class="text-start">Worker</th>
                                                <th class="text-start">Description</th>
                                                <th t-if="is_uom_day" class="text-end">Days Spent</th>
                                                <th t-else="" class="text-end">Hours Spent</th>
                                            </tr>
                                        </thead>
                                        <tbody class="sale_tbody">
                                            <t t-foreach="docs.timesheet_ids" t-as="line">
                                                <tr t-att-style="'background-color: #F1F1F1;' if line_index % 2 == 0 else ''">
                                                    <td>
                                                        <span t-field="line.date"/>
                                                    </td>
                                                    <td>
                                                        <span t-field="line.employee_id.name"/>
                                                    </td>
                                                    <td class="text-start">
                                                        <span t-field="line.display_name"/>
                                                    </td>
                                                    <td class="text-end">
                                                        <span t-if="is_uom_day"
                                                              t-out="line._convert_hours_to_days(line.unit_amount)"
                                                              t-options='{"widget": "timesheet_uom"}'>5 days
                                                        </span>
                                                        <span t-else="" t-out="line.unit_amount"
                                                              t-options="{'widget': 'float_time'}">10:00
                                                        </span>
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                    <div class="row justify-content-end">
                                        <div t-att-class="'col-sm-2' if report_type == 'pdf' else 'col-auto'">
                                            <table class="table table-sm">
                                                <tr class="border-black o_total">
                                                    <td colspan="4" class="text-end">
                                                        <strong class="me-2">Total</strong>
                                                        <span t-if="is_uom_day"
                                                              t-out="line._convert_hours_to_days(docs.effective_hours)">
                                                            10 days
                                                        </span>
                                                        <span t-else="" t-field="docs.effective_hours"
                                                              t-options='{"widget": "float_time"}'>10:00
                                                        </span>
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                        <t t-if="doc.report_signature">
                            <div class="row mt-4">
                                <div class="col-12 text-end">
                                    <h5>Customer Signature</h5>
                                    <img t-att-src="image_data_uri(doc.report_signature)"
                                         style="max-height: 6rem; max-width: 100%; color:black;"/>
                                    <br/>
                                    <span t-field="doc.report_signed_by"/>
                                </div>
                            </div>
                        </t>
                    </t>
                </main>
            </div>
        </t>
    </template>


    <record id="action_custom_report_field_service" model="ir.actions.report">
        <field name="name">Service Details</field>
        <field name="model">project.task</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">industry_fsm_sale.report_field_service_document</field>
        <field name="report_file">industry_fsm_sale.report_field_service_document</field>
        <field name="binding_model_id" ref="model_project_task"/>
        <field name="binding_type">report</field>
    </record>


</odoo>
