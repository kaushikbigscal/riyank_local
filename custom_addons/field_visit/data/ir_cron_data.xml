            <!-- Cron job for creating field visits from route assignments -->
    <record id="ir_cron_route_assignment_create_visits" model="ir.cron">
        <field name="name">Route Assignment: Create Field Visits</field>
        <field name="model_id" ref="model_route_assignment"/>
        <field name="type">ir_cron</field>
        <field name="user_id" ref="base.user_root"/>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall">False</field>
        <field name="state">code</field>
        <field name="code">model.cron_create_visits()</field>
        <field name="active">True</field>
    </record>
</odoo>
