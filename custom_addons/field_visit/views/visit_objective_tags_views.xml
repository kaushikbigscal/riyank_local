    <!--                <field name="name"/>-->
    <!--                <field name="color" widget="color_picker" optional="show"/>-->
    <!--            </tree>-->
    <!--        </field>-->
    <!--    </record>-->

    <record id="field_visit_objective_action" model="ir.actions.act_window">
        <field name="name">Visit Objective</field>
        <field name="res_model">visit.objective</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No objective found. Let's create one!
            </p>
            <p>
                Use objective to categorize your visit.
            </p>
        </field>
    </record>

    <menuitem
            name="Visit Objective"
            parent="menu_field_visit_config"
            id="visit_objective_menu_view"
            action="field_visit_objective_action"
            groups="field_visit.group_field_visit_manager,field_visit.group_field_visit_user,field_visit.group_field_visit_managers"
            sequence="4"
    />
</odoo>
