<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="field_visit_objective_search_view">
        <field name="name">field_visit_objective_search_view</field>
        <field name="model">visit.objective</field>
        <field name="arch" type="xml">
            <search string="Issue Version">
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="field_visit_objective_tree_view" model="ir.ui.view">
        <field name="name">field.visit.objective.tree</field>
        <field name="model">visit.objective</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="color" widget="color_picker"/>

            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="field_visit_objective_form_view">
        <field name="name">field_visit_objective_form_view</field>
        <field name="model">visit.objective</field>
        <field name="arch" type="xml">
            <form string="Visit Objective">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color" widget="color_picker"/>
                    </group>
                    <notebook>
                        <page string="Sub Objectives">
                            <field name="sub_objective_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

